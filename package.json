{
  "name": "node-chill",
  "version": "0.0.0",
  "description": "Chill - The monitoring tool.",
  "authors": [
    "Saugat Acharya <mesaugat@gmail.com>",
    "Kabir Baidhya <kabirbaidhya@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "start": "run-s start:dev",
    "start:dev": "nodemon --exec babel-node src/index.js",
    "clean": "rimraf dist/",
    "lint": "eslint src test",
    "babel": "babel src/ -d dist/",
    "build": "run-s lint clean babel",
    "lint:fix": "eslint src test --fix",
    "codecov": "cat coverage/*/lcov.info | codecov",
    "test": "NODE_ENV=test mocha --recursive --require babel-register test",
    "test:coverage": "NODE_ENV=test istanbul cover node_modules/mocha/bin/_mocha -- --recursive --require babel-register --colors --reporter spec test"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "express": "^4.14.0",
    "moment": "^2.17.1",
    "moment-precise-range-plugin": "^1.2.0",
    "morgan": "^1.7.0",
    "request": "^2.72.0",
    "request-promise": "^4.1.0",
    "winston": "^2.3.0",
    "yamljs": "^0.2.8"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "codecov": "^2.1.0",
    "eslint": "^3.19.0",
    "express-list-routes": "^0.1.4",
    "foreman": "^2.0.0",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.1",
    "rimraf": "^2.5.4",
    "sinon": "^2.1.0"
  },
  "engines": {
    "node": ">= 4.2.0",
    "npm": ">= 2.14.7"
  }
}
