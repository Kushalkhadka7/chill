{
  "name": "chill-cli",
  "version": "1.0.0-alpha.1",
  "description": "Chill - The monitoring tool.",
  "authors": [
    "Saugat Acharya <mesaugat@gmail.com>",
    "Kabir Baidhya <kabirbaidhya@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "start": "run-s start:dev",
    "start:dev": "nodemon --exec babel-node src/index.js",
    "clean": "rimraf dist/",
    "lint": "eslint src test",
    "babel": "babel src/ -d dist/",
    "build": "run-s lint clean babel",
    "lint:fix": "eslint src test --fix",
    "codecov": "cat coverage/*/lcov.info | codecov",
    "test": "NODE_ENV=test mocha",
    "test:watch": "NODE_ENV=test mocha --watch",
    "test:coverage": "NODE_ENV=test istanbul cover node_modules/mocha/bin/_mocha -- --recursive --require babel-register --colors --reporter spec test",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "prepack": "npm run build",
    "prepare": "npm run build"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "bluebird": "^3.4.6",
    "bookshelf": "^0.10.3",
    "bookshelf-camelcase": "^1.1.4",
    "handlebars": "^4.0.6",
    "http-status-codes": "^1.1.6",
    "knex": "^0.13.0",
    "memory-cache": "^0.1.6",
    "moment": "^2.17.1",
    "moment-precise-range-plugin": "^1.2.0",
    "morgan": "^1.7.0",
    "nodemailer": "^4.0.1",
    "request": "^2.72.0",
    "request-promise": "^4.1.0",
    "sqlite3": "^3.1.8",
    "twilio": "^2.11.1",
    "webpack-merge": "^4.1.0",
    "winston": "^2.3.0",
    "winston-daily-rotate-file": "^1.4.6",
    "yamljs": "^0.2.8",
    "yargs": "^7.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-dynamic-import-node": "^1.0.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "chai-subset": "^1.5.0",
    "codecov": "^2.1.0",
    "eslint": "^3.19.0",
    "faker": "^4.1.0",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.1",
    "proxyquire": "^1.7.11",
    "rimraf": "^2.5.4",
    "shelljs": "^0.7.7",
    "sinon": "^2.1.0"
  },
  "preferGlobal": true,
  "bin": {
    "chill": "bin/chill"
  },
  "files": [
    "bin/",
    "dist/",
    "chill.yml.dist",
    "knexfile.js"
  ],
  "engines": {
    "node": ">= 6.9.0",
    "npm": ">= 3.10.8"
  }
}
